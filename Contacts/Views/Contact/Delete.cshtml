@model Contacts.Entities.Contact

@{
    ViewBag.Title = "Excluir Contato";
}

<h2>@ViewBag.Message</h2>

<h3>Deseja realmente excluir este registro?</h3>
<fieldset>
    <legend>@ViewBag.Message</legend>

    <p class="display-field">
        <span>Nome:</span>
        @Html.DisplayFor(model => model.Name)
    </p>

    <p class="display-field">
        <span>Email:</span>
        @Html.DisplayFor(model => model.Email)
    </p>

    <p class="display-field">
        <span>Telefone:</span>
        @Html.DisplayFor(model => model.DddPhoneNumber)
    </p>

    <p class="display-field">
        <span>Endereço:</span>
        @Html.DisplayFor(model => model.AddressNumber)
    </p>

    <p class="display-field">
        <span>Bairro:</span>
        @Html.DisplayFor(model => model.Neighborhood)
    </p>

    <p class="display-field">
        <span>Cep:</span>
        @Html.DisplayFor(model => model.ZipCode)
    </p>

    <p class="display-field">
        <span>Cidade:</span>
        @Html.DisplayFor(model => model.CityState)
    </p>

    <p class="display-field">
        <span>Data Criação:</span>
        @Html.DisplayFor(model => model.CreateDate)
    </p>

</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Excluir" />
        |
        @Html.ActionLink("Voltar p/ listagem", "Index")
    </p>
}